<query id="updateProject" action="update">
    <tables>
        <table name="translation_projects" />
    </tables>
    <columns>
        <column name="project_name" var="project_name" notnull="notnull"/>
        <column name="reg_date" var="reg_date" default="curdate()" />
    </columns>
    <conditions>
        <condition operation="equal" column="translation_project_srl" var="translation_project_srl" filter="number" notnull="notnull" />
    </conditions>
</query>
