<query id="getRecommendedCount" action="select">
	<tables>
       <table name="translation_contents" />
   </tables>
   <columns>
       <column name="*"/>
   </columns>
   <conditions>
		<condition operation="equal" column="translation_file_srl" var="translation_file_srl" filter="number" />
		<condition operation="equal" column="lang" var="lang" default="en" pipe="and"/>
   </conditions>
   <groups>
		<group var="groupColumn" />
	</groups>
   <navigation>
   		<index var="sort_index1" default="content_node" order="desc" />
        <index var="sort_index" default="recommended_count" order="desc" />
        <list_count var="list_count" default="50000" />
    </navigation>
</query>
