<query id="insertXMLContents" action="insert">
    <tables>
        <table name="translation_contents" />
    </tables>
    <columns>
		<column name="translation_content_srl" var="translation_content_srl" filter="number" notnull="notnull" />
		 <column name="module_srl" var="module_srl" filter="number" default="0" />
		<column name="translation_project_srl" var="translation_project_srl" filter="number" notnull="notnull" />
        <column name="translation_file_srl" var="translation_file_srl" filter="number" notnull="notnull" />
        <column name="content_node" var="content_node" notnull="notnull" />
        <column name="lang" var="lang" notnull="notnull" />
        <column name="member_srl" var="member_srl" default="0" filter="number" />
        <column name="content" var="content"/>
        <column name="recommended_count" var="recommended_count" default="0" />
		<column name="is_original" var="is_original" default="0" />
		<column name="is_new_lang" var="is_new_lang" default="0" />
		<column name="reg_date" var="reg_date" default="curdate()" />
    </columns>
</query>
