<query id="getModuleTranslationLangApprovedCount" action="select">
	<tables>
	   <table name="translation_contents" />
	</tables>
	<columns>
	   <column name="count(distinct(content_node))" alias="content_node_count"/>
	</columns>
	<conditions>
		<condition operation="equal" column="module_srl" var="module_srl" filter="number" notnull="notnull" />
		<condition operation="equal" column="lang" var="lang" notnull="notnull" pipe="and"/>
		<condition operation="more" column="recommended_count" var="recommended_count" notnull="notnull" pipe="and"/>
	</conditions>
	<groups>
		<group column="translation_file_srl" />
	</groups>
</query>
